<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodReviewActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/images">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Food Reviews"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/edittext_id"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:inputType="number"
        android:hint="Review ID"/>


    <EditText
        android:id="@+id/edittext_name"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="#ffffff"
        android:hint="Food Name"/>

    <EditText
        android:id="@+id/edittext_review"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:hint="Enter Review"/>

    <EditText
        android:id="@+id/edittext_rate"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter Rate"/>


    <Button
        android:id="@+id/add"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#29A6A6"
        android:text="ADD" />

    <Button
        android:id="@+id/btShow"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#29A6A6"
        android:text="Show Reviews" />

    <Button
        android:id="@+id/btdelete"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#29A6A6"
        android:text="Delete" />

    <Button
        android:id="@+id/btUpdate"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#29A6A6"
        android:text="Update" />



</LinearLayout>


